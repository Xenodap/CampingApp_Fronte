<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/BoardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목입니다."
            android:textSize="18sp"
            android:textColor="#333333"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/BoardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성일입니다."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BoardModify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수정"
                android:textColor="#FFFFFF"
                android:background="#009688"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/BoardDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="삭제"
                android:textColor="#FFFFFF"
                android:background="#009688"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/upload"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/BoardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용입니다."
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="#F0F0F0"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/BoardCommentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textSize="18sp"
            android:textColor="#333333"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#F0F0F0">

            <EditText
                android:id="@+id/BoardComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="댓글 내용을 입력하세요"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/CommentWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록하기"
                android:textColor="#FFFFFF"
                android:background="#009688"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
